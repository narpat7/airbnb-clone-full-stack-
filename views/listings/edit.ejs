<% layout("/layouts/boilerplate") %>
<br>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>edit your listing</h3>  
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
        <div class="mb-2">
            <input name="listing[title]" value="<%= listing.title  %>" type="text" class="form-control">
        </div>
        <div class="mb-2">
            <textarea name="listing[description]" class="form-control"><%= listing.description %></textarea>
        </div>
        <div class="mb-2">
            <input type="text" name="listing[image][url]", name="listing[image][filename]" value="<%= listing.image.url %>", value="<%= listing.image.filename %>" class="form-control">
        <!-- <input type="text" name="listing[image][filename]" value=" listing.image.filename %>"> -->
        </div>
        <div class="row">
        <div class="mb-2 col-md-4">
            <input name="listing[price]" value="<%= listing.price  %>" type="number" class="form-control">
        </div>
        <div class="mb-2 col-md-8">
            <input name="listing[country]" value="<%= listing.country  %>" type="text" class="form-control">
        </div>
    </div>
        <div class="mb-2">
            <input name="listing[location]" value="<%= listing.location   %>" type="text" class="form-control">
        </div>
        <button class="btn btn-primary mt-3">edit</button>
    </form> 
</div>
</div>
