<% layout("/layouts/boilerplate") %>
<body>
  <h3>All Listings</h3>

  <div class="row">
    <% for (let listing of allListings) { %>
      <div class="col-12 col-md-4 mb-4">
        <a href="/listing/<%= listing._id %>" class="text-decoration-none text-dark">
          <div class="card h-100 shadow-sm">
            <% if (listing.image) { %>
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 200px; object-fit: cover;">
            <% } else { %>
              <img src="/default.jpg" class="card-img-top" alt="default image" style="height: 200px; object-fit: cover;">
            <% } %>
            <div class="card-body">
              <h5 class="card-title fw-bold"><%= listing.title %></h5>
              <p class="card-text mb-0">â‚¹ <%= typeof listing.price === 'number' ? listing.price.toLocaleString("en-IN") : "N/A" %> / night</p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</body>
