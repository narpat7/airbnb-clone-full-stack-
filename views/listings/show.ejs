<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2"> 
    <h3>listing details :</h3>  
    </div>
    <div class="card col-6 offset-2 show-card" >
        <img src="<%= listing.image.url  %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br>
            <b>â‚¹  <%= (listing.price || 0).toLocaleString("en-IN") %></b> <br>
            <b><%= listing.country %></b> <br>
            <b><%= listing.location %></b> <br>
        </p>
        </div>
      </div>
      </div>
    <div class="btns mb-3">
    <a href="/listing/<%= listing._id  %>/edit" class="btn btn-primary col-1 offset-2">Edit</a>

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-primary offset-4 " onclick="return confirmDelete()">Delete</button>
    </form>
</div>
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this listing?");
        }
    </script>
</div>
</div>

